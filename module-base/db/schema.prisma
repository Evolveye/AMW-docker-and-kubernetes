datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}


// --------------------------------------


model Game {
  id             Int      @id @default(autoincrement()) @map("_id")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  state          String
  winner         String?
}

