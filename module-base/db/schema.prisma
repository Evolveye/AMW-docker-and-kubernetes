datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}


// --------------------------------------


model Game {
  id             Int      @id @default(autoincrement()) @map("_id")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  uuid           String   @unique
  type           String
  state          String
  winner         String?
  circle         String?
  cross          String?
}

